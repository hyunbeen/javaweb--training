	<% for(int i=startpage;i<=endpage;i++){ %>
	<a href='listMessage.jsp?page=<%=i%>'>[<%= i %>]</a>
	<%}//end of for i %>...
	<a href="listMessage.jsp?page=<%=next_pageno%>" >[다음]</a>
